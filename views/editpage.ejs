<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>disabled database</title>
    </head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Disabled People</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <% if (user && user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/patientList">View Patients</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addPatient">Add new Patient</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Search">Search</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>Update Database</h2></div>
        <br>
        <div class="text-center">
          <% if (patient) { %> 
            <form action="/editpage/<%= patient.patient_id %>" method="POST">
              <label for="full_name">Patient Name:</label><br>
              <input type="text" id="full_name" name="full_name" value="<%= patient.full_name %>" required><br><br>

              <label for="date_of_birth">Date of Birth:</label><br>
              <input type="date" id="date_of_birth" name="date_of_birth" value="<%= patient.date_of_birth %>" required><br><br>

              <label for="medical_condition">Medical Condition:</label><br>
              <input type="text" id="medical_condition" name="medical_condition" value="<%= patient.medical_condition %>" required><br><br>
              
              <label for="gender">Gender:</label><br>
              <input type="text" id="gender" name="gender" value="<%= patient.gender %>" required><br><br>

              <label for="address">Address:</label><br>
              <input type="text" id="address" name="address" value="<%= patient.address %>" required><br><br>

              <label for="contact">Contact:</label><br>
              <input type="text" id="contact" name="contact" value="<%= patient.contact %>" required><br><br>

              <label for="next_of_kin">Next of Kin:</label><br>
              <input type="text" id="next_of_kin" name="next_of_kin" value="<%= patient.next_of_kin %>" required><br><br>

              <label for="admission_date">Admission Date:</label><br>
              <input type="date" id="admission_date" name="admission_date" value="<%= patient.admission_date.toISOString().split('T')[0] %>" required><br><br>
    
  <button type="submit">Update Patient</button>
            </form>

          <% } else { %>
              <p>No patient found.</p>
          <% } %>
          <a href ="/">Back</a>
        </div>
    </div>
</body>
</html>
